<h1>My Portfolio</h1>


<div class="search-area">
  <h3>Search Stocks</h3>
  <p>Search symbol used in stock market like: AMZN symbol used for AMAZON in stock market</p>
  <%=form_tag search_stock_path, remote:true,  method: :get do %>
  <div class="form-group row">
    <div class="col-sm-9">
      <%= text_field_tag :stock, params[:stock], placeholder:"Stock ticker symbol",autofocus:true, class:"form-control from-control-lg"%>
    </div>
    <div class="col-sm-3">
      <%=button_tag type: :submit, class:"btn btn-success" do%>
      <%= 'Search' %>
      <%end %>
    </div>
  </div>
  <% end %>
</div>

<div class="d-block mb-3">
<div id="results">
</div>
</div>



<%= render "stock/list" %>


